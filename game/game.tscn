var speed:float = 0.0

func _process(_delta: float) -> void:
	speed = $\"../../AwesomeCar\".speed
	$Text.text = \"%d km/h\" % (speed* 3.6)
	queue_redraw()


func _draw() -> void:
	draw_arc(Vector2.ZERO, 80, -PI, -PI + speed / 85 * PI, 24, Color.WHITE, 6)
"

